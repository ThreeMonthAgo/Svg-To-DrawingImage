<Window x:Class="Svg_To_DrawingImage.MWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:local="clr-namespace:Svg_To_DrawingImage"
        mc:Ignorable="d"
        Title="MWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="2" Grid.Column="0">
            <CheckBox Name="CKB_Cpb" Content="监控剪切板" IsChecked="True" FontSize="14" Margin="2"/>
            <StackPanel Background="AliceBlue" Margin="2">
                <RadioButton Name="RaBtn_Geometry"
                             Margin="2"
                             HorizontalAlignment="Left"
                             Content="Geometry"
                             IsChecked="True"
                             Checked="RadioButton_Checked"/>
                <RadioButton Name="RaBtn_PathGeometry"
                             Margin="2"
                             HorizontalAlignment="Left"
                             Content="PathGeometry"
                             Checked="RadioButton_Checked"/>
                <RadioButton Name="RaBtn_CombinedGeometry"
                             Margin="2"
                             HorizontalAlignment="Left"
                             Content="CombinedGeometry"
                             Checked="RadioButton_Checked"/>
            </StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" FontSize="12" Text="资源名称" VerticalAlignment="Center"/>
                <TextBox Name="TB_Name"
                         Grid.Column="1"
                         Text="default"
                         Padding="2,0"
                         Height="20"
                         MinHeight="0"
                         Margin="2"
                         FontSize="12"
                         TextChanged="TB_Name_TextChanged"/>
            </Grid>
            <Button Content="复制结果" Height="20" Padding="0" FontSize="12" HorizontalAlignment="Stretch" Click="Button_Cp_Click"/>
        </StackPanel>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="SVG 代码 （或拖入 SVG 文件）" FontSize="14"/>
                <avalonEdit:TextEditor Grid.Row="1"
                                       Name="SVG_Text"
                                       FontFamily="Consolas"
                                       SyntaxHighlighting="XML"
                                       FontSize="10"
                                       Margin="5"
                                       ShowLineNumbers="True"
                                       WordWrap="True"
                                       DragEnter="SVG_Text_DragEnter"
                                       Drop="SVG_Text_Drop"
                                       TextChanged="SVG_Text_TextChanged"/>
            </Grid>
            <TabControl Grid.Row="1" Name="MyTabControl">
                <TabItem Header="Geometry 资源" FontSize="14" MinHeight="0" Height="26" Padding="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <avalonEdit:TextEditor Name="Geometry_Text" FontFamily="Consolas" SyntaxHighlighting="XML" FontSize="10" Margin="5" ShowLineNumbers="True" WordWrap="True"/>
                        <Path Grid.Column="1" Name="Path_Icon" Margin="5" Fill="{DynamicResource PrimaryBrush}" Stretch="UniformToFill"/>
                    </Grid>
                </TabItem>

                <TabItem Header="DrawingImage 资源" FontSize="14" MinHeight="0" Height="26" Padding="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <avalonEdit:TextEditor Name="DrawingImage_Text" FontFamily="Consolas" SyntaxHighlighting="XML" FontSize="10" Margin="5" ShowLineNumbers="True" WordWrap="True"/>
                        <Image Grid.Column="1" Name="Image_DrawingImage" Margin="5" Stretch="Uniform" HorizontalAlignment="Right"/>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
